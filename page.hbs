{{!< default}}

{{> custom/post-meta}}

<div class="container">

    {{#post}}

        <article class="{{post_class}}">

            <header class="page-header">

                <h1 class="page-title">{{title}}</h1>

                {{#if image}}<img src="{{image}}" alt="{{title}}">{{/if}}

            </header>

            <section class="page-content">

                {{content}}

            </section>

        </article>

    {{/post}}

</div>
