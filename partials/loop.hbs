{{#foreach posts}}

<article class="{{post_class}}">

    <header class="post-header">

        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

        {{#if image}}<img src="{{image}}" alt="{{title}}">{{/if}}

    </header>

    <section class="post-excerpt">

        <p>{{excerpt words='26'}} <a href="{{url}}" class="read-more">&raquo;</a></p>

    </section>

    <footer class="post-meta">

        {{#if author.image}} <img src="{{author.image}}" alt="{{author.name}}" class="img-avatar" />{{/if}}
        Por {{author.name}}
        {{tags prefix=' en '}}
        <span class="meta-separator"> | </span>
        <time class="post-date" datetime="{{date format='DD/MM/YYYY'}}">{{date timeago='true'}}</time>
        <span class="meta-separator"> | </span>
        <a href="{{url}}#comments" class="comments-count" data-href="{{url absolute='true'}}"></a>

    </footer>

</article>

{{/foreach}}

{{pagination}}
